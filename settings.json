{
    "workbench.startupEditor": "none",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "One Dark Pro Darker",
    "workbench.tree.indent": 16,
    "workbench.tree.renderIndentGuides": "always",
    "oneDarkPro.editorTheme": "One Dark Pro Darker",
    "editor.fontSize": 16,
    "editor.minimap.scale": 2,
    "editor.minimap.showSlider": "always",
    "editor.renderWhitespace": "trailing",
    "editor.stickyScroll.maxLineCount": 7,
    "editor.linkedEditing": true,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1500,
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "standard",
    "explorer.compactFolders": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "security.workspace.trust.untrustedFiles": "open",
    "openapi.sortOutlines": false,
    "redhat.telemetry.enabled": false,

    "workbench.colorCustomizations": {
        "tree.indentGuidesStroke": "#aaaaaa",

        "editorBracketHighlight.foreground1": "#d19a66",
        "editorBracketHighlight.foreground2": "#f070f0",
        "editorBracketHighlight.foreground3": "#dada00",
        "editorBracketHighlight.foreground4": "#8080ff",
        "editorBracketHighlight.foreground5": "#80e540",
        "editorBracketHighlight.foreground6": "#d0d0d0",
    },

    "flake8.args": [
        "--ignore=E501,E262,E127",
    ],

    "files.exclude": {
        "**/.DS_Store": false,
        "**/.git": false,
        "**/.hg": false,
        "**/.svn": false,
        "**/CVS": false,
        "**/Thumbs.db": false,
    },

    "editor.semanticTokenColorCustomizations": {
        "rules": {
            "variable": "#cccccc",
            "property": "#cccccc",
            "variable.readonly": "#d19a66",
            "function.builtin": "#56b6c2",
            "class.builtin.overridden": "#e5c07b",
            "variable.decorator" : "#c0ea00",
            "function.decorator": "#c0ea00",
            "method.decorator": "#c0ea00",
            "class.decorator": "#c0ea00",
            "module.decorator": "#c0ea00",
        },
    },

    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "comment",
                    "storage",
                    "keyword.control",
                    "keyword.operator.logical.python",
                    "variable.parameter.function.language.special",
                ],
                "settings": {
                    "fontStyle": "italic",
                },
            },
            {
                "scope": [
                    "punctuation.definition.decorator",
                    "entity.name.function.decorator",
                ],
                "settings": {
                    "foreground": "#c0ea00",
                },
            },
        ],
    },
}
